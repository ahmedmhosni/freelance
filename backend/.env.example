PORT=5000
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Generate a strong random secret for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production-use-at-least-32-characters
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Email Configuration (Azure Communication Services)
# Get these from Azure Portal -> Communication Services -> Your Resource -> Keys
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-resource.communication.azure.com/;accesskey=your-access-key
EMAIL_FROM=noreply@yourdomain.com

# Application Configuration
APP_URL=http://localhost:5173
APP_NAME=Roastify
SUPPORT_EMAIL=support@roastify.com

# Token Expiration
EMAIL_VERIFICATION_EXPIRY=24h
PASSWORD_RESET_EXPIRY=1h

# Database Configuration
# Set USE_AZURE_SQL=true to use SQL Server (local or Azure)
# Set USE_AZURE_SQL=false to use SQLite (simple local development)
USE_AZURE_SQL=true

# Local SQL Server Express Configuration
DB_SERVER=localhost
DB_PORT=48807
DB_DATABASE=FreelancerDB
DB_USER=freelanceapp
DB_PASSWORD=FreelanceApp123!
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# Azure SQL Configuration (for production)
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=your-database
AZURE_SQL_USER=your-username@your-server
AZURE_SQL_PASSWORD="your-password-with-special-chars"
AZURE_SQL_PORT=1433
AZURE_SQL_ENCRYPT=true

# Note: Passwords with special characters like # must be quoted

# Azure AD B2C (optional for production)
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# Cloud Storage OAuth (optional)
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
DROPBOX_CLIENT_ID=
DROPBOX_CLIENT_SECRET=
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=

# Stripe Payment Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
